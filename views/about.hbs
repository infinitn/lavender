<script>
    var bar = new scrollbot('.map',5);
    noOrbk('.map',bar);

    var rec = new scrollbot('.recommend',5);
    noOrbk('.recommend',rec);

    function noOrbk(ele,sty) {
        sty.setStyle({
            display:'none'
        },{
            display:'none'
        });

        $(ele).on('mouseenter',function () {
            sty.setStyle({
                background:'#9400D3',
                display:'block'
            },{
                background:'#FCDEFC',
                display:'block'
            })
        });
        $(ele).on('mouseleave',function () {
            sty.setStyle({
                background:'#9400D3',
                display:'none'
            },{
                background:'#FCDEFC',
                display:'none'
            })
        });
    }
</script>
