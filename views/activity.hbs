    <script>
        $('.content .ullist').eq(0).show();
        $('.navul li').mouseover(function () {
           idx = $(this).index();
           $(this).addClass('current').siblings().removeClass('current');

           $('.content .ullist').eq(idx).show();

            $('.content .ullist').not($('.content .ullist').eq(idx)).hide();
        });

        $('.content').mouseenter(function(){
            $('.xialatiao').css({'display':'block'});
        });
        $('.content').mouseleave(function(){
            $('.xialatiao').css({'display':'none'});
        });

        //详细新闻1
        var list1 = $('.ullist1 li');
        $('.right').show();
        $('.right2').hide();
//        $('.nywrap').style.background = 'images/activity/nybj5.jpg';

        $.get('/nid/activity',function(result){
            if (result.success){
                for (var i = 0; i < list1.length;i++){
                    console.log(list1[i]);
                    list1[i].hlm = i;

                    $('.content .ullist1 li').click(function(){

                        $('.right').hide();
                        $('.right2').show();

                        for (var j = 0;j < result.data.length;j++){
                            console.log()
                            var m = result.data[this.hlm];
                            $('.contents')[0].innerHTML = '<div class="title">'+
                                    '<h3>'+ m.title +'</h3>'+
                                    '<p>[ 时间：' + m.date +'　<a href="/activity">返回上级</a> ]</p>'+
                                    '</div>'+
                                            '<p>'+ m.fuli +'</p>'+
                                    ' <ul>'+
                                    '<li><img src="'+ m.img1 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img2 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img3 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img4 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img5 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img6 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img7 +'" alt=""/></li>'+
                                    '</ul>';
                        }
                    })
                }

            }
        })

        //详细新闻2
        var list2 = $('.ullist2 li');
        $('.right').show();
        $('.right2').hide();



        $.get('/nid1/activity',function(result){
            if (result.success){
                for (var i = 0; i < list2.length;i++){
                    console.log(list2[i]);

                    $('.content .ullist2 li').click(function(){

                        $('.right').hide();
                        $('.right2').show();
                        $('.right2 .fenlei').html('光影动漫节');

                        for (var j = 0;j < result.data.length;j++){
                            var m1 = result.data[j];

                            $('.contents .imgs')[0].innerHTML +=
                                    '<li><img src="'+ m1.image +'" alt=""/></li>';
                        }
                    })
                }

            }
        })

        //详情新闻3
        var list3 = $('.ullist3 li');
        $('.right').show();
        $('.right2').hide();

        $.get('/nid2/activity',function(result){
            if (result.success){
                for (var i = 0; i < list3.length;i++){
                    console.log(list3[i]);
                    list3[i].hlm2 = i;

                    $('.content .ullist3 li').click(function(){

                        $('.right').hide();
                        $('.right2').show();
                        $('.right2 .fenlei').html('最新动态');

                        for (var j = 0;j < result.data.length;j++){
                            console.log()
                            var m = result.data[this.hlm2];
                            $('.contents')[0].innerHTML = '<div class="title">'+
                                    '<h3>'+ m.title +'</h3>'+
                                    '<p>[ 时间：' + m.time +'　<a href="/activity">返回上级</a> ]</p>'+
                                    '</div>'+
                                    '<p class="ps">'+ m.p1 +'</p>'+
                                    '<p class="ps">'+ m.p2 +'</p>'+
                                    '<p class="ps">'+ m.p3 +'</p>'+
                                    '<p class="ps">'+ m.p4 +'</p>'+
                                    ' <ul>'+
                                    '<li><img src="'+ m.img1 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img2 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img3 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img4 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img5 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img6 +'" alt=""/></li>'+
                                    '<li><img src="'+ m.img7 +'" alt=""/></li>'+
                                    '</ul>';
                        }
                    })
                }

            }
        })


        //新闻详情4



