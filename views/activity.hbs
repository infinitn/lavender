    <script src="js/scrollbot.js" type="text/javascript"></script>
    <script>
        var bar = new scrollbot('.map',5);
        noOrbk('.map',bar);


        function noOrbk(ele,sty) {
            sty.setStyle({
                display:'none'
            },{
                display:'none'
            });

            $(ele).on('mouseenter',function () {
                sty.setStyle({
                    background:'#9400D3',
                    display:'block'
                },{
                    background:'#FCDEFC',
                    display:'block'
                })
            });
            $(ele).on('mouseleave',function () {
                sty.setStyle({
                    background:'#9400D3',
                    display:'none'
                },{
                    background:'#FCDEFC',
                    display:'none'
                })
            });
        }
    </script>



