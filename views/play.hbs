<script>
    //美颜温泉
    var spa = new scrollbot('.spa',5);
    noOrbk('.spa',spa);
    //卡丁车
    var car = new scrollbot('.car',5);
    noOrbk('.car',car);
    //游乐场
    var field = new scrollbot('.play-field',5);
    noOrbk('.play-field',field);
    //儿童乐园
    var child = new scrollbot('.child',5);
    noOrbk('.child',child);
    //高尔夫
    var golf = new scrollbot('.golf',5);
    noOrbk('.golf',golf);
    //网球
    var tennis = new scrollbot('.tennis',5);
    noOrbk('.tennis',tennis);
    //室内泳池
    var swimming = new scrollbot('.swimming',5);
    noOrbk('.swimming',swimming);

    function noOrbk(ele,sty) {
        sty.setStyle({
            display:'none'
        },{
            display:'none'
        });

        $(ele).on('mouseenter',function () {
            sty.setStyle({
                background:'#9400D3',
                display:'block'
            },{
                background:'#FCDEFC',
                display:'block'
            })
        });
        $(ele).on('mouseleave',function () {
            sty.setStyle({
                background:'#9400D3',
                display:'none'
            },{
                background:'#FCDEFC',
                display:'none'
            })
        });
    }
</script>
<!--//排他逻辑-->
<script>
    $('.navs ul li:first-child').addClass('active');
    $('.content').hide();
    $('.content').eq(0).show();
    $('.navs ul li').mousemove(function () {
        $(this).addClass('active').siblings().removeClass('active');
        idx = $(this).index();
        $('.content').eq(idx).show();
        $('.content').not($('.content').eq(idx)).hide();

    })
</script>